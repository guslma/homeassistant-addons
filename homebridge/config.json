{
  "name": "Homebridge",
  "version": "2025-02-16",
  "slug": "homebridge",
  "description": "Homebridge - HomeKit support for the impatient",
  "url": "https://hub.docker.com/r/homebridge/homebridge",
  "arch": [
    "armv7",
    "amd64"
  ],
  "host_network": true,
  "image": "homebridge/homebridge",
  "init": false,
  "ingress": true,
  "timeout": 30,
  "panel_icon": "mdi:home-automation",
  "map": [
    {
      "type": "addon_config",
      "read_only": false,
      "path": "/homebridge"
    },
    {
      "type": "homeassistant_config",
      "read_only": false,
      "path": "/config"
    },
    {
      "type": "share",
      "read_only": false,
      "path": "/config/homebridge-backup"
    }
  ],
  "ports": {
    "8581/tcp": 8581
  },
  "ports_description": {
    "8581/tcp": "Frontend tcp-listen port"
  },
  "options": {
    "data_path": "/config/homebridge"
  },
  "schema": {
    "data_path": "str",
    "watchdog": "str?"
  }
}
